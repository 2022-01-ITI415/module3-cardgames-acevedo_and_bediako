<xml>
	<!-- This file holds info for laying out the Prospector card game. -->
	
	<!-- The multiplier is multiplied by the x and y attributes below. -->
	<!-- This determines how loose or tight the layout is. --> 
	<multiplier x="1.25" y="1.25" />
	
	<!-- In the XML below, id is the number of the card -->
	<!-- x and y set position -->
	<!-- faceup is 1 if the card is face-up -->
	<!-- layer sets the depth layer so cards overlap properly -->
	<!-- hiddenby is the ids of cards that keep a card face-down -->
	
	<!-- Layer0, the deepest cards. -->
	<slot id="0" x="-6" y="-5" faceup="1" layer="1"/>
	<slot id="1" x="-4" y="-5" faceup="1" layer="1"/>
	<slot id="2" x="-2" y="-5" faceup="1" layer="1"/>
	<slot id="3" x="0" y="-5" faceup="1" layer="1"/>
	<slot id="4" x="2" y="-5" faceup="1" layer="1"/>
	<slot id="5" x="4" y="-5" faceup="1" layer="1"/>
	<slot id="6" x="6" y="-5" faceup="1" layer="1"/>
	
	<!-- Layer1, the second level. -->
	<slot id="7" x="-5" y="-3" faceup="1" layer="5"/>
	<slot id="8" x="-3" y="-3" faceup="1" layer="5"/>
	<slot id="9" x="-1" y="-3" faceup="1" layer="5"/>
	<slot id="10" x="1" y="-3" faceup="1" layer="5"/>
	<slot id="11" x="3" y="-3" faceup="1" layer="5"/>
	<slot id="12" x="5" y="-3" faceup="1" layer="5"/>
	
	<!-- Layer2, the third level. -->
	<slot id="13"  x="-4" y="-1" faceup="1" layer="4"/>
	<slot id="14"  x="-2" y="-1" faceup="1" layer="4"/>
	<slot id="15"  x="0" y="-1" faceup="1" layer="4"/>
	<slot id="16"  x="2" y="-1" faceup="1" layer="4"/>
	<slot id="17"  x="4" y="-1" faceup="1" layer="4"/>
	
	<!-- Layer3, the fourth level. -->
	<slot id="18" x="-3" y="1" faceup="1" layer="3"/>
	<slot id="19" x="-1" y="1" faceup="1" layer="3"/>
	<slot id="20" x="1" y="1" faceup="1" layer="3"/>
	<slot id="21" x="3" y="1" faceup="1" layer="3"/>

	<!-- Layer4, the fifth level. -->
	<slot id="22" x="-2" y="3" faceup="1" layer="2"/>
	<slot id="23" x="0" y="3" faceup="1" layer="2"/>
	<slot id="24" x="2" y="3" faceup="1" layer="2"/>

	<!-- Layer5, the sixth level. -->
	<slot id="25" x="-1" y="5" faceup="1" layer="1"/>
	<slot id="26" x="1" y="5" faceup="1" layer="1"/>

	<!-- Layer6, the last (top) level. -->
	<slot id="27" x="0" y="7" faceup="1" layer="0"/>

	<!-- This positions the draw pile and staggers it -->
	<slot type="drawpile" x="-9" y="7" xstagger="0" layer="1"/>
	
	<!-- This positions the discard pile and target card -->
	<slot type="discardpile" x="-5" y="7" layer="0"/>
	
</xml>
	